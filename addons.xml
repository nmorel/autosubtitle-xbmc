<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
    <addon id="service.subtitles.autosubtitle"
           name="AutoSubtitle"
           version="0.0.15"
           provider-name="nmorel">
        <requires>
            <import addon="xbmc.python" version="2.1.0"/>
        </requires>
        <extension point="xbmc.subtitle.module"
                   library="service.py" />
        <extension point="xbmc.addon.metadata">
            <summary lang="en">AutoSubtitle</summary>
            <description lang="en">Search and download subtitles from AutoSubtitle</description>
            <disclaimer lang="en"></disclaimer>
            <platform>all</platform>
            <license>GNU GENERAL PUBLIC LICENSE. Version 2, June 1991</license>
            <forum></forum>
            <website></website>
            <email></email>
            <source></source>
        </extension>
    </addon>
    <addon id="xbmc.repo.autosubtitle"
           name="AutoSubtitle Add-ons for XBMC"
           version="0.0.4"
           provider-name="nmorel">
        <requires>
            <import addon="xbmc.python" version="2.1.0"/>
        </requires>
        <extension point="xbmc.addon.repository" name="AutoSubtitle Add-on Repository">
            <info compressed="false">http://nmorel.github.io/autosubtitle-xbmc/addons.xml</info>
            <checksum>http://nmorel.github.io/autosubtitle-xbmc/addons.xml.md5</checksum>
            <datadir zip="true">http://nmorel.github.io/autosubtitle-xbmc/addons</datadir>
            <hashes>false</hashes>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary lang="en">Install Add-ons for AutoSubtitle</summary>
            <description lang="en">Install Add-ons for AutoSubtitle</description>
            <disclaimer lang="en"/>
            <platform>all</platform>
            <nofanart>true</nofanart>
        </extension>
    </addon>
</addons>
